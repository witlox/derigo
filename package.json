{
  "name": "derigo",
  "version": "1.0.0",
  "description": "Browser extension that analyzes web content for political alignment and truthfulness",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/build.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "npm run build && cd dist && zip -r ../derigo.zip .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "political-bias",
    "fact-check",
    "content-filter"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.0.287",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
